#player_area
  #player{data: {video_id: @video.id, video_code: @video.code, video_session_code: @video_session_code}}

%ul#videos_list
  %h4 Videos
  - Video.all.each do |video|
    - title = truncate(video.title, length: 20)
    %li
      - if video.id == @video.id
        %a.tiny.button.video.disabled= title
      - else
        %a.tiny.button.video{href: "/videos/watch/?id=#{video.id}"}= title

%ul#sessions_list
  %h4 Graphs
  - @video.sessions.each do |s|
    %li
      %a.tiny.button.session{data: {session_code: s[0], reveal_id: "graphsModal"}}
        = s[1].strftime("%b %d %H:%M:%S")
      %a.tiny.secondary.button.session_delete{data: {session_code: s[0]}}
        x


#graphsModal.reveal-modal.transparent{"data-reveal" => ""}
  #waves_graphs.hide
    - Wave.types.each do |wave_type, wave_name|
      %h4.light
        %span= "#{wave_name} (#{wave_type.to_s})"
      .aGraph.transparent{wave_type: wave_type}
  %a.close-reveal-modal Ã—

%script{src: "http://www.youtube.com/player_api"}
= javascript_include_tag 'application', 'youtube_watch', 'video_sessions_line_graphs'

